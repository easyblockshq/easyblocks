{
  "name": "@easyblocks/shopify",
  "version": "0.2.3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "lint": "eslint src/",
    "dev": "concurrently -n bundle,emit-declarations 'npm run bundle:watch' 'npm run emit-declarations:watch'",
    "build": "npm run bundle && npm run emit-declarations",
    "bundle": "NODE_ENV=production webpack",
    "bundle:watch": "NODE_ENV=development webpack --watch",
    "emit-declarations": "tsc",
    "emit-declarations:watch": "npm run emit-declarations -- --watch --preserveWatchOutput",
    "bundle-declarations": "api-extractor run --local"
  },
  "dependencies": {
    "@babel/runtime": "^7.21.0",
    "@easyblocks/core": "workspace:*",
    "@easyblocks/design-system": "workspace:*",
    "graphql-request": "^3.4.0"
  },
  "devDependencies": {
    "@easyblocks/build-tools": "workspace:*",
    "@types/react": "^18.2.20"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0-rc.1 || ^18.0.0"
  },
  "files": [
    "dist/",
    "package.json",
    "LICENSE.md"
  ]
}
