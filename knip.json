{
  "$schema": "https://unpkg.com/knip@3/schema.json",
  "workspaces": {
    ".": {
      "entry": ["packages/.eslintrc.js"]
    },
    "apps/*": {
      "next": true,
      "ignoreDependencies": ["eslint", "eslint-config-next"]
    },
    "packages/*": {
      "project": ["src/**/*.{js,ts,tsx}"],
      "ignoreDependencies": ["@babel/runtime"]
    },
    "packages/core": {
      "entry": ["src/index.ts", "src/_internals.ts"],
      "ignoreDependencies": ["@babel/runtime", "postcss-value-parser"]
    },
    "packages/editor": {
      "ignoreDependencies": ["@babel/runtime"]
    }
  },
  "ignore": [
    "apps/website/src/components/TwitterSection/TwitterSection.tsx",
    "packages/core/src/compiler/builtins/inlineCodeTextModifier.ts"
  ],
  "ignoreBinaries": ["supabase"],
  "ignoreDependencies": ["babel-jest"]
}
